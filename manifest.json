{
  "manifest_version": 3,
  "name": "YouTube Distraction Blocker",
  "version": "1.0.0",
  "description": "This extension optionally blocks thumbnails and other distracting YouTube features.",
  "action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/thumbnails.js"]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage"
  ]
}